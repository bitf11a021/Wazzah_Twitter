    <head>
        <meta charset="UTF-8" />
        <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
        <title>Login and Registration Form with HTML5 and CSS3</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <meta name="description" content="WELCOME TO FREIND ZONE" />
        <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
        <meta name="author" content="Codrops" />
        <link rel="shortcut icon" href="../favicon.ico"> 
        <link rel="stylesheet" type="text/css" href="~/content/demo.css" />
        <link rel="stylesheet" type="text/css" href="~/content/style.css" />
		<link rel="stylesheet" type="text/css" href="~/content/animate-custom.css" />
    </head>
    <body>
        <div class="container">
           
            <header>
                <h1><strong>Welcome To Twitter</strong></h1>
                <h2> Login and Registration Form</h2>
				
            </header>
            <section>				
                <div id="container_demo" >
                    <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                            <form  action="mysuperscript.php" autocomplete="on"> 
                                <h1>Click to Edit</h1> 
       
                                <p class="change_link">
									
									<a href="#toregister" class="to_register">Edit Profile</a>
								</p>
                            </form>
                        </div>

                      <div id="register" class="animate form">
                            <form  action="/Home/editprofile1/@ViewBag.x.Id" autocomplete="on" method="post" enctype="multipart/form-data"> 
                                
                                <p> 
                                    <label for="usernamesignup" class="uname" data-icon="u">Name</label>
                                    <input id="userfullname" name="userfullname" required="required" type="text" placeholder="Enter Full Name" />
                                </p>

    
                                <p> 
                                    <label for="passwordsignup" class="youpasswd" data-icon="p">Password </label>
                                    <input id="userpassword" name="userpassword" required="required" type="password" placeholder="Enter your Password"/>
                                </p>
                                <p> 
                                    <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Re-enter Password</label>
                                    <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" placeholder="Enter your Password Again"/>
                                </p>

                              

                                <p> 
                                    <label for="dateofbirth" class="youdateofbirth" data-icon="u">Your Date of Birth </label>
                                    <input id="userdob" name="userdob" required="required" type="date" />
                                </p>

                                 <p> 
                                    <label for="usernamesignup" class="uname" data-icon="u">City</label>
                                    <input id="usercity" name="usercity" required="required" type="text" placeholder="Enter City" />
                                </p>

                                <p> 
                                    <label for="usernamesignup" class="uname" data-icon="u">Choose Profile Picture</label>
                                    <input type="file" name="picture" id="picture" accept="image/jpeg, image/gif"/>
                                </p>
                                
    
                                <p class="signin button"> 
									<input type="submit" value="Edit"/> 
								</p>

                        
                            </form>
                        </div>
						
                    </div>
                </div>  
            </section>
        </div>
    </body>
</html>