                </form>

                         <table>
               

                    

               @foreach (var s in @ViewBag.x.posts)
                {
                    <tr>
                        
                        <td>@s.p</td>
                        
                    </tr>
                   
                }
            </table>


                    <form action="/Home/profile" method="post">
                        <input type="submit" value=" Go Back To Your Profile" />
                    </form>

                
            </div>
            <div id="boxes">
              <div>
                <div class="inner">
                  <div id="left">
                    <div class="inner">
                     
                    </div>
